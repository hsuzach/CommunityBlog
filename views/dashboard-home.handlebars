
<div class="dashboard-home container is-flex is-flex-direction-column is-align-items-center">
<a class="button is-dark" href="/dashboard/new" type="click" id="new-post-get" style="max-width: 400px;"><strong>Create A New Post</strong></a>
<br>
</div>

{{#if posts}}
<div class="container">
  {{#each posts}}
  <div class="card mx-6">
    <div class="card-header py-1 px-5" id="post-info">
      
        <a id="post-title" href="/dashboard/edit/{{id}}" style="font-weight: bold">{{title}}</a>
      
      <div>
        Posted on {{format_date createdAt}}
      </div>
    </div>
    <div class="card-body py-1 px-5">
      {{content}}
    </div>
  </div>
  <br>
  {{/each}}
</div>
{{else}}

<br><br><br>
  <h2 style="position: relative; text-align: center">
    <strong>You do not have any posts yet! Get started by creating a post above!</strong>
  </h2>

{{/if}}

