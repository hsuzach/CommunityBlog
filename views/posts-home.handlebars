<div>testing all posts</div>

<div class="container">
  {{#each posts}}
  <div class="card mx-6">
    <div class="card-header" id="post-info">
      
        <a id="post-title" href="/post/{{id}}">{{title}}</a>
      
      <div>
        Posted by {{User.username}} on {{format_date createdAt}}
      </div>
    </div>
    <div class="card-body">
      {{content}}
    </div>
  </div>
  <br>
  {{/each}}
</div>